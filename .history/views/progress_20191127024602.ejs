  <%var BMI = user.weight/(user.height*user.height)%>
  <div class="jumbotron">
      <h1 class="display-3">Here is your progress</h1>
      <p class="lead">This is a comparison of the last time you have weighted yourself and your current weight!</p>
      <hr class="my-4">
      <% if(BMI < 20){ %>
        <div class="alert alert-dismissible alert-danger">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <strong>You need to gain <%=(20 - user.weight)%> to reach the ideal BMI level!</strong>
        </div>
        
      <% } else{ %>  
        <div class="alert alert-dismissible alert-danger">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <strong>You need to lose <%=(BMI * (user.height*user.height))%> to reach the ideal BMI level!</strong>
        </div>
     <% } %>
      <p>Your diet completion is mentioned!</p>
      <div class="progress">
          <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="1" aria-valuemin="0" aria-valuemax="100" style="width: 1%"></div>
        </div>
  </div>
 
   
 